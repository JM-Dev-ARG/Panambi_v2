---
interface Props {
  titulo: string;
  subtitulo: string;
  descripcion: string;
  imagen: string;
  bgColor: string;
}
const { titulo, subtitulo, descripcion, imagen, bgColor } = Astro.props;
---

<div
  class=`border-negro shadow-Panambi relative flex h-[450px] flex-col items-center justify-start rounded-3xl border-2 pt-8 md:pt-12 xl:pt-16 ${bgColor}`
>
  <div
    class="flex h-auto w-full flex-col items-center justify-between text-neutral-100 md:h-auto xl:h-[40%]"
  >
    <div class="mb-6 flex w-full flex-col items-center justify-center gap-2">
      <h4
        class="text-balance text-center text-lg font-normal uppercase md:text-lg xl:text-xl"
      >
        {titulo}
      </h4>
      <h5
        class="font-titulo text-balance text-center text-2xl font-black uppercase tracking-wide md:text-2xl xl:text-3xl"
      >
        {subtitulo}
      </h5>
    </div>

    <div
      class="font-titulo w-[80%] text-pretty text-center font-light leading-tight"
    >
      <p>
        {descripcion}
      </p>
    </div>
  </div>
  <img
    src={imagen}
    alt=`imagen de ${titulo}`
    class="absolute -bottom-[20%] left-1/2 h-auto w-[70%] -translate-x-1/2 rounded-2xl object-cover shadow-2xl md:-bottom-[20%] xl:-bottom-[30%]"
  />
</div>
