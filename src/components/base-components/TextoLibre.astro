---
interface Props {
  titulo: string;
  subtitulo?: string;
  marginTop?: string;
  textNegro?: boolean;
}

const { titulo, subtitulo, marginTop, textNegro } = Astro.props;
---

<div
  class={`${marginTop ? marginTop : "mt-8"} w-full text-balance text-center text-lg font-light leading-4 sm:text-xl sm:leading-5 lg:w-[80%] ${marginTop} ${textNegro ? "text-negro" : "text-neutral-100"}`}
>
  <p
    class="font-titulo pb-2 text-xl font-semibold leading-6 sm:text-2xl sm:leading-7"
  >
    {titulo}
  </p>
  <p>
    {subtitulo}
  </p>
</div>
