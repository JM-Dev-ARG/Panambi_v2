---
interface Props {
  title: string;
  subtitle: string;
}
const { title, subtitle } = Astro.props;
---

<div
  class="text-negro mb-16 flex w-full flex-col items-center justify-center gap-2"
>
  <h3
    class="tracking-panambi-nav text-center text-2xl font-normal uppercase md:text-3xl lg:text-4xl"
  >
    {title}
  </h3>
  <h2
    class="font-titulo md:leading-12 lg:leading-14 w-full text-balance text-center text-4xl font-black uppercase leading-10 tracking-wide md:w-4/5 md:text-5xl lg:w-1/2 lg:text-6xl"
  >
    {subtitle}
  </h2>
</div>
