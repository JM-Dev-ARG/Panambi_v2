---
import logo from "@/assets/svg/logotipo_footer.svg";

interface Props {
    img: string;
    dataText: Array<{ titulo: string; descripcion: string; }>; 
    bgColor: string   
}

const { img, dataText, bgColor } = Astro.props;

---
 
  <div class=`flex flex-col-reverse sm:flex-row h-[600px] sm:h-[450px] lg:h-[550px] w-full items-end justify-center sm:mt-4 lg:mt-6  border-2 border-negro shadow-Panambi rounded-3xl p-3 ${bgColor}`>
      <div class="h-1/2 w-full sm:w-1/2 sm:h-full flex flex-col items-start justify-between p-3">
        <img 
          src={logo.src} 
          alt="logo panambi" 
          width="auto"
          height="auto" 
          loading="lazy" 
          class="h-[100px] sm:h-[200px] lg:h-[250px] w-auto object-contain object-top opacity-70" 
        />
        
          <div class="flex flex-col gap-2.5 h-full w-full items-start justify-end">
            {
                dataText.map((item) => {
                    return (
                        <div class="flex flex-col gap-1 text-neutral-200 uppercase  text-pretty ">
                            <p class="font-titulo text-lg sm:text-2xl font-semibold tracking-wider leading-4 sm:leading-6">{item.titulo}</p>
                            <p class="text-sm leading-3.5 sm:text-base sm:leading-4 ">{item.descripcion}</p>
                        </div>
                    )
                })
            }
          </div>
      </div>
    <div class="h-1/2 w-full sm:w-1/2 sm:h-full rounded-xl border-2 border-negro bg-neutral-100 grid place-items-center mx-auto">
      <img
        src={img}
        alt="Contactanos"
        width="auto"
        height="auto"
        loading="lazy"
        class="w-[70%] object-contain "
      />
    </div>
  </div>