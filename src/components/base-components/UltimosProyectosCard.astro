---
interface Props {
  titulo: string;
  bgImg: string;
  cardLetra: string;
  bgColor?: string;
}

const { titulo, bgImg, cardLetra, bgColor } = Astro.props;
---

<a
  href="/proyectos"
  class=`group relative flex w-full h-[300px] cursor-pointer items-center justify-center overflow-hidden rounded-3xl border-2 text-2xl z-[4] border-negro  text-neutral-100 shadow-Panambi transition-all duration-500 ease-in-out ${cardLetra}`
>
  <div class={`absolute inset-0 -z-[1]  ${bgColor}`}></div>
  <div
    class="absolute h-1/2 w-[80%] bg-contain bg-center bg-no-repeat transition-all duration-300 ease-in-out group-hover:scale-[1.2]"
    style=`background-image: url('${bgImg}');`
  >
  </div>

  <!-- <p class="z-[4] w-full rounded-xl p-4 text-center backdrop-blur-xl">
    {titulo}
  </p> -->
</a>

<style>
  .a {
    grid-area: a;
  }
  .b {
    grid-area: b;
  }
  .c {
    grid-area: c;
  }
  .d {
    grid-area: d;
  }
</style>
