---
import logo from "@/assets/svg/logotipoPanambi.svg";
import LogotipoAnimado from "../svg/LogotipoAnimado.astro";
---

<nav class="sticky top-0 z-50 mx-auto grid w-full place-items-center py-2 ">
  <div
    class="bg-verde2-400/85 flex h-[50px] w-[450px] items-center justify-between rounded-xl p-1 text-xs font-normal backdrop-blur-sm tracking-panambi-nav text-neutral-100"
  >
    <a
      href="/"
      class="size-[47px]"
      ><LogotipoAnimado />
    </a>
    <div class="flex h-full flex-1 items-center justify-evenly">
      <div
        class="h-full flex justify-center items-center transition-all duration-300"
      >
        <a
          class="flex h-full cursor-pointer items-center justify-center transform-3d group pt-3"
          href="/servicios"
        >
          <div class="h-full overflow-hidden">
            <p
              class="h-full pt-[2px] group-hover:opacity-0 group-hover:-translate-y-full transition-all duration-500 transform-3d"
            >
              Servicios
            </p>
            <p
              class="h-full pt-[2px] opacity-0 group-hover:opacity-100 group-hover:-translate-y-full transition-all duration-500 transform-3d"
            >
              Servicios
            </p>
          </div>
        </a>
      </div>
      <div
        class="h-full flex justify-center items-center transition-all duration-300"
      >
        <a
          class="flex h-full cursor-pointer items-center justify-center transform-3d group pt-3"
          href="/proyectos"
        >
          <div class="h-full overflow-hidden">
            <p
              class="h-full pt-[2px] group-hover:opacity-0 group-hover:-translate-y-full transition-all duration-500 transform-3d"
            >
              Proyectos
            </p>
            <p
              class="h-full pt-[2px] opacity-0 group-hover:opacity-100 group-hover:-translate-y-full transition-all duration-500 transform-3d"
            >
              Proyectos
            </p>
          </div>
        </a>
      </div>

      <div
        class="h-full flex justify-center items-center transition-all duration-300"
      >
        <a
          class="flex h-full cursor-pointer items-center justify-center transform-3d group pt-3"
          href="/equipo"
        >
          <div class="h-full overflow-hidden">
            <p
              class="h-full pt-[2px] group-hover:opacity-0 group-hover:-translate-y-full transition-all duration-500 transform-3d"
            >
              Equipo
            </p>
            <p
              class="h-full pt-[2px] opacity-0 group-hover:opacity-100 group-hover:-translate-y-full transition-all duration-500 transform-3d"
            >
              Equipo
            </p>
          </div>
        </a>
      </div>
    </div>
    <div
      class="h-full flex justify-center items-center "
    >
      <a
        class="flex h-full cursor-pointer items-center justify-center rounded-lg px-5 text-neutral-900 font-semibold hover:scale-95 transition-all duration-500 transform-3d group bg-neutral-50 pt-3"
        href="/contacto"
      >
        <div class="h-full overflow-hidden">
          <p
            class="h-full pt-[2px] group-hover:opacity-0 group-hover:-translate-y-full transition-all duration-500 transform-3d"
          >
            Contacto
          </p>
          <p
            class="h-full pt-[2px] opacity-0 group-hover:opacity-100 group-hover:-translate-y-full transition-all duration-500 transform-3d"
          >
            Contacto
          </p>
        </div>
      </a>
    </div>
  </div>
</nav>


