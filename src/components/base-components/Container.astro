---
import Autoria from "./Autoria.astro";

interface Props {
  id: string;
  classNameSeccion?: string;
  classNameContainer?: string;
}
const { id, classNameSeccion, classNameContainer } = Astro.props;
---

<section
  id={id}
  class={`w-full grid place-items-center mx-auto ${classNameSeccion} mt-[80px]`}
>
  <div
    class={`h-full w-full max-w-[1280px] mx-auto grid place-items-center px-4 ${classNameContainer}`}
  >
    <slot />
    {id === "footer" ? <Autoria /> : ""}
  </div>
</section>
