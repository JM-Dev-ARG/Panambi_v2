---
import Container from "./Container.astro";
import logo from "@/assets/svg/logotipoPanambi.svg";
import nmombre from "@/assets/svg/logo_full_lila.svg";


---

<Container id="footer">
    <footer class="flex flex-col sm:flex-row sm:h-[250px] lg:h-[300px] w-full items-center justify-center sm:justify-between bg-negro rounded-tl-3xl rounded-tr-3xl overflow-hidden px-12 ">
    <a href="/#hero_index" class="sm:w-[35%] lg:w-[30%] xl:w-[25%] object-contain inline-block">
        
      <img
        src={logo.src}
        alt="Logo Panambi"
        width="auto"
        height="auto"
        loading="lazy"
        class="w-full object-contain object-bottom "
      >
      <img src={nmombre.src} alt="Logo Panambi" width="auto" height="auto" loading="lazy" class="w-[250px] object-contain -mt-11  lg:-mt-14 xl:-mt-16">

    </a>

    <div class="w-full sm:w-[30%] flex items-start justify-between text-neutral-100 py-4">
            <div class="flex flex-col h-full  items-start justify-center gap-3 text-left">

        <p class="text-lg lg:text-2xl font-light font-titulo tracking-panambi-nav">Secciones</p>
        <div class="flex flex-col gap-2 justify-center items-start">
<a
        class="transform-3d nav-link group relative flex cursor-pointer flex-col items-center justify-center overflow-hidden text-sm h-[18px] lg:text-lg lg:h-[20px] "
        href="/servicios"
        
      >
        <p
          class="abasolute transform-3d -top-1/2 left-0 translate-y-1/2 transition-all duration-500 group-hover:-translate-y-full group-hover:opacity-0"
        >
          Servicios
        </p>
        <p
          class="abasolute transform-3d -top-full left-0 opacity-0 transition-all duration-500 group-hover:-translate-y-1/2 group-hover:opacity-100"
