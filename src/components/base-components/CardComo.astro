---
interface Props {
  titulo: string;
  descripcion: string;
  textNegro?: boolean;
}
const { titulo, descripcion, textNegro } = Astro.props;
import flecha from "@/assets/svg/flecha_logo_panambi.svg";
---

<article
  class={`flex flex-col items-start justify-center gap-2 ${
    textNegro ? "text-negro" : "text-neutral-100"
  }`}
>
  <h3
    class="flex items-center justify-start gap-4 text-lg font-bold uppercase sm:text-2xl"
  >
    <img
      src={flecha.src}
      alt="Flecha logo Panambi"
      class="h-6 w-6 md:h-8 md:w-8"
    />
    {titulo}
  </h3>
  <p class="ml-10 text-base sm:text-lg md:ml-12">{descripcion}</p>
</article>
