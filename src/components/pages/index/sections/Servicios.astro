---
import Boton from "@/components/base-components/Boton.astro";
import CardServicios from "@/components/base-components/CardServicios.astro";
import Container from "@/components/base-components/Container.astro";
import Titulo from "@/components/base-components/Titulo.astro";
import dataCardServicios from "@/data/data_servicios.json";
---

<Container id="Servicios_index">
  <div class="md:w-2/3 lg:w-2/3">
    <Titulo title="empeza hoy a" subtitle="transformar tu negocio" />
  </div>

  <div
    class="grid w-full gap-x-7 gap-y-24 pb-24 sm:grid-cols-2 sm:grid-rows-2 lg:gap-y-32 xl:mb-20 xl:gap-y-40"
  >
    {
      dataCardServicios.map((card) => (
        <CardServicios
          titulo={card.tituloCardIndex}
          subtitulo={card.titulo}
          descripcion={card.descripcionIndex}
          imagen={card.img}
          bgColor={card.bgColor}
          textoNegro={false}
        />
      ))
    }
  </div>
</Container>
