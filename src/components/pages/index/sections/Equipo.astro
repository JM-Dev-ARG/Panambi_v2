---
import Boton from "@/components/base-components/Boton.astro";
import Carrousel from "@/components/base-components/Carrousel.astro";
import Container from "@/components/base-components/Container.astro";
import TituloCards from "@/components/base-components/TituloCards.astro";
import dataEquipo from "@/data/equipo.json";
---

<Container id="Equipo__index">
  <div
    class="bg-negro border-negro flex h-[400px] w-full flex-col items-center justify-start overflow-hidden rounded-3xl border-2 pt-8 sm:h-[500px] lg:h-[600px]"
  >
    <div class="flex flex-col items-center justify-center gap-4">
      <TituloCards textNegro={false} title="Nuestro" subtitle="Equipo" />
      <Boton texto="Conocenos" href="/equipo" />
    </div>

    <div class="flex h-full w-full items-end justify-center">
      <Carrousel
        className="h-full w-full"
        classSlider="h-full gap-2 "
        duration="slow"
      >
        {
          dataEquipo.map((equipo) => (
            <div class="flex h-full w-[150px] items-center justify-center sm:w-[250px] lg:w-[300px]">
              <img
                src={equipo.img}
                alt={equipo.title}
                width="auto"
                height="auto"
                loading="lazy"
                class="h-full w-full object-contain object-bottom pr-2 sm:object-cover"
              />
            </div>
          ))
        }
      </Carrousel>
    </div>
  </div>
</Container>
