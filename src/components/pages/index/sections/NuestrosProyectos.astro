---
import Container from "@/components/base-components/Container.astro";
import Titulo from "@/components/base-components/Titulo.astro";
import UltimosProyectosCard from "@/components/base-components/UltimosProyectosCard.astro";
import cardProyectosData from "@/data/proyectos_card_index.json";  
---

<Container id="NuestrosProyectos">
  <div class="grid w-full place-items-center">
    <Titulo
      title="Â¿Queres ver mas?"
      subtitle="Te mostramos nuestros ultimos trabajos"
    />
    <div class="proyectos__layout"
    >
      {
        cardProyectosData.map((card) => (
          <UltimosProyectosCard
            titulo={card.titulo}
            bgImg={card.bgImg}
            cardLetra={card.cardLetra}
            bgColor={card.bgColor}
          />
      ))}
    </div>
  </div>
</Container>

<style>
  .proyectos__layout {
    width: 100%;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 16px;
  }

  @media (width >= 600px) {
    .proyectos__layout {
      display: grid;
      grid:
      "a a a b b" 1fr
      "c c d d d" 1fr
      / 1fr 1fr 1fr 1fr 1fr;
    }
  }

  .a {
    grid-area: a;
  }
  .b {
    grid-area: b;
  }
  .c {
    grid-area: c;
  }
  .d {
    grid-area: d;
  }
</style>
