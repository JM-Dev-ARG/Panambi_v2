---
import Container from "@/components/base-components/Container.astro";
import celImg from "@/assets/img/hero/hero_cel_mano.avif";
import resultadosImg from "@/assets/img/hero/hero_resultados.avif";
import postImg from "@/assets/img/hero/hero_post_insta.avif";
import btnImg from "@/assets/img/hero/hero_btn_compartir.avif";
import celtest from "@/assets/img/hero/cel_test.png";
---

<Container
  id="hero"
  classNameSeccion="h-[550px] xl:h-[650px] pb-4 pt-8 overflow-x-clip"
>
  <div class="hero-grid ">
    <div class="a">1</div>
    <div class="b"></div>
    <div class="c">4</div>
    <div class="d">
      
      <div class=" relative h-full w-full object-bottom ">
<img
        src={celImg.src}
        alt=""
        class="absolute bottom-0 right-0 rounded-b-3xl h-auto  " 
      />
      </div>
      

      <div
        class="absolute left-0  xl:left-[10%] bottom-0 xl:bottom-[10%]  aspect-auto h-full w-full bg-cover bg-center  xl:scale-125 "
        style=`background-image: url(${resultadosImg.src});`
      >
      </div>
      <div
        class="absolute left-0 top-0 aspect-auto h-full w-full bg-cover bg-center px-2 opacity-90"
        style=`background-image: url(${postImg.src});`
      >
      </div>
      <div
        class="absolute left-0 top-0 aspect-auto h-full w-full bg-cover bg-center px-2 scale-95"
        style=`background-image: url(${btnImg.src});`
      >
      </div>
    </div>
  </div>
</Container>

<style>
  .hero-grid {
    width: 100%;
    height: 100%;
    display: grid;
    gap: 16px;
    grid: 
      "a a a a a " 1fr
      "a a a a a " 1fr
      "b b  b c c " 1fr
      / 1fr 1fr 1fr 1fr 1fr ;
  }

  @media (width >= 600px) {
    .hero-grid {
      grid:
     "a a a a a d d d" 1fr
      "a a a a a d d d" 1fr
      "b b b b c c c c" 1fr
      / 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr;
    }
  }

  @media (width >= 1024px) {
    .hero-grid {
      grid:
      "a a a a a d d d" 1fr
      "a a a a a d d d" 1fr
      "b b b c c d d d" 1fr
      / 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr;
    }
  }
  
  .a,
  .b,
  .c,
  .d {
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 24px;
    box-shadow: 4px 4px 0px #1a181b;
  }

  .a {
    grid-area: a;
    background-color: color-mix(
      in oklab,
      var(--color-violeta1-100) 37%,
      transparent
    );
  }
  .d {
    grid-area: d;
    background-color: var(--color-verde2-300);
    display: none;
    position: relative;
  }

  @media (width >= 600px) {
    .d {
      display: flex;
    }
  }
  .b {
    grid-area: b;
    background-image: url("/public/img/hero_img_card_1.avif");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
  .c {
    grid-area: c;
    background-color: var(--color-violeta1-200);
  }
</style>
