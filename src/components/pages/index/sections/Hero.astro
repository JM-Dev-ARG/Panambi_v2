---
import Container from "@/components/base-components/Container.astro";
import celImg from "@/assets/img/hero/hero_cel_mano.avif";
import resultadosImg from "@/assets/img/hero/hero_resultados.avif";
import postImg from "@/assets/img/hero/hero_post_insta.avif";
import btnImg from "@/assets/img/hero/hero_btn_compartir.avif";
import celtest from "@/assets/img/hero/cel_test.png";
---

<Container
  id="hero"
  classNameSeccion="h-[calc(100dvh-100px)] overflow-hidden pb-4"
>
  <div class="hero-grid pt-16">
    <div class="a">1</div>
    <div class="b"></div>
    <div class="c">4</div>
    <div class="d px-2">
      <!--       <div
        class="scale-115 absolute left-0 top-0 aspect-auto h-full w-full bg-cover bg-center"
        style=`background-image: url(${celImg.src});`
      >
      </div> -->
      <img
        src={celtest.src}
        alt=""
        class="absolute -top-10 left-0 h-full w-full"
      />

      <div
        class="absolute left-3 top-0 aspect-auto h-full w-[80%] bg-cover bg-center px-2"
        style=`background-image: url(${resultadosImg.src});`
      >
      </div>
      <div
        class="absolute -left-3 top-0 aspect-auto h-full w-full bg-cover bg-center px-2"
        style=`background-image: url(${postImg.src});`
      >
      </div>
      <div
        class="absolute left-3 top-0 aspect-auto h-full w-full bg-cover bg-center px-2"
        style=`background-image: url(${btnImg.src});`
      >
      </div>
    </div>
  </div>
</Container>

<style>
  .hero-grid {
    width: 100%;
    height: 100%;
    display: grid;
    grid:
      "a a a a a d d d" 1fr
      "a a a a a d d d" 1fr
      "b b b c c d d d" 1fr
      / 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr;
    gap: 16px;
  }

  .a,
  .b,
  .c,
  .d {
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 24px;
    box-shadow: 4px 4px 0px #1a181b;
  }

  .a {
    grid-area: a;
    background-color: color-mix(
      in oklab,
      var(--color-violeta1-100) 37%,
      transparent
    );
  }
  .d {
    grid-area: d;
    background-color: var(--color-verde2-500);
    position: relative;
  }
  .b {
    grid-area: b;
    background-image: url("/public/img/hero_img_card_1.avif");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
  .c {
    grid-area: c;
    background-color: var(--color-violeta1-200);
  }
</style>
