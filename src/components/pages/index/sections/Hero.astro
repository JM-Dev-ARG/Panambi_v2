---
import Container from "@/components/base-components/Container.astro";
---

<Container id="hero" classNameSeccion="h-[calc(100dvh-100px)] overflow-hidden pb-4">
  <div class="hero-grid">
    <div class="a">1</div>
    <div class="d">2</div>
    <div class="b">3</div>
    <div class="c">4</div>
  </div>
</Container>


<style>
  .hero-grid {
  width: 100%;
  height: 100%;
  display: grid;
  grid:
    "a a a a d d d" 1fr
    "a a a a d d d" 1fr
    "b b c c d d d" 1fr
    / 1fr 1fr 1fr 1fr 1fr 1fr 1fr;
  gap: 16px;
}

.a, .b, .c, .d{
  background-color: rebeccapurple;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 24px;
  box-shadow:  4px 4px 0px #1a181b;
}

.a { grid-area: a; }
.d { grid-area: d; }
.b { grid-area: b; }
.c { grid-area: c; }
</style>