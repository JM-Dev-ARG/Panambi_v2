---
import Container from "@/components/base-components/Container.astro";
import Titulo from "@/components/base-components/Titulo.astro";
import PreciosItems from "../desarrolloWeb/PreciosItems.astro";

interface Props {
  idContainer: string;
  titulo: string;
  subtitle: string;
  dataText: {
    titulo: string;
    descripcion: string;
    items: string[];
    precio: string;
  };
}

const { idContainer, titulo, subtitle, dataText } = Astro.props;
---

<Container id={idContainer}>
  <div
    class="flex h-full w-full flex-col items-center justify-center sm:w-[90%] lg:w-[80%]"
  >
    <Titulo title={titulo} subtitle={subtitle} />
  </div>

  <div
    class="card__container mt-5 flex flex-col items-center justify-center gap-8 lg:grid"
  >
    <div
      class="border-negro text-negro shadow-Panambi medida flex h-auto w-full flex-col items-start justify-center gap-8 rounded-3xl border-2 p-4"
    >
      <div class="flex w-full flex-col items-center gap-8 sm:flex-row">
        <p
          class="font-titulo text-center text-5xl font-black uppercase sm:text-left xl:text-nowrap"
        >
          {dataText.titulo}
        </p>
        <p class="">
          {dataText.descripcion}
        </p>
      </div>
      <div class="grid w-full grid-cols-2 place-items-start gap-2">
        {
          dataText.items.map((card) => (
            <PreciosItems titulo={card} textNegro={true} />
          ))
        }
      </div>
      <p class="font-titulo mt-8 text-2xl font-black uppercase sm:text-3xl">
        Precio $ {dataText.precio}
      </p>
    </div>
  </div>
</Container>

<style>
  .card__container {
    width: 100%;
    height: auto;

    grid:
      "a b c" auto
      "a b c" auto
      "d d d" auto
      / 1fr 1fr 1fr;
    gap: 16px;
  }

  .basico {
    grid-area: a;
  }
  .basicoplus {
    grid-area: b;
  }
  .pro {
    grid-area: c;
  }
  .medida {
    grid-area: d;
  }
</style>
