---
import PreciosItems from "./PreciosItems.astro";

interface Props {
  titulo: string;
  descripcion: string;
  dataItems: string[];
  precio: string;
  clase: string;
}
const { titulo, descripcion, dataItems, precio, clase } = Astro.props;
---

<div
  class=`border-negro shadow-Panambi ${clase} flex w-full h-full flex-col items-start justify-between gap-8 rounded-3xl border-2 p-4`
>
  <div class="flex w-full flex-col items-center gap-2">
    <div
      class="flex w-full flex-col items-center gap-2 sm:flex-row lg:flex-col"
    >
      <p class="font-titulo text-center text-5xl font-black uppercase">
        {titulo}
      </p>
      <p class="">
        {descripcion}
      </p>
    </div>
    <div
      class="mt-4 grid w-full grid-cols-2 place-items-start gap-2 lg:grid-cols-1"
    >
      {dataItems.map((card) => <PreciosItems titulo={card} textNegro={true} />)}
    </div>
  </div>

  <p class="font-titulo mt-8 text-3xl font-black uppercase">
    desde u$s {precio}.-
  </p>
</div>
