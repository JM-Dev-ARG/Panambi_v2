---
import ContainerServiciosProyectos from "@/components/base-components/ContainerServiciosProyectos.astro";
import UltimoLLamado from "@/components/base-components/UltimoLLamado.astro";
import Hero from "@/components/pages/servicios/sections/HeroServicios.astro";
import Layout from "@/layouts/Layout.astro";
import data from "@/data/data_servicios.json";
const keywords = [
  "consultoría estratégica de negocios",
  "desarrollo web personalizado",
  "marketing digital para profesionales",
  "sitios web a medida",
  "estrategia de marketing online",
  "transformación digital para empresas",
  "branding y comunicación digital",
  "identidad visual corporativa",
  "contenidos digitales y vídeo para marcas",
  "social media para servicios profesionales",
  "posicionamiento SEO para negocios",
  "diseño UX/UI profesional",
  "empresa de desarrollo web y marketing digital",
  "plan de marketing multiplataforma",
  "servicio digital para profesionales y empresas",
];
---

<Layout
  title="Panambi - Servicios"
  description="Estrategia, diseño y tecnología para profesionales que quieren destacar. En Panambí transformamos tus servicios en una presencia digital de alto impacto."
  keywords={keywords}
>
  <Hero />
  <ContainerServiciosProyectos data={data} bgColor="bg-verde1-200/50" />
  <UltimoLLamado
    idContainer="ultimo_llamado_index"
    textoBoton="contactanos"
    titulo="No esperes más"
    subtitulo="comencemos!!"
    hrefBoton="/contacto"
    bgColor="bg-verde1-300"
  />
</Layout>

<script>
  import AOS from "aos";
  import "aos/dist/aos.css";
  document.addEventListener("astro:page-load", () => {
    AOS.init({
      once: true,
      duration: 800,
    });
  });
</script>
