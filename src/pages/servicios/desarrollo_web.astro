---
import LayoutServicios from "@/layouts/LayoutServicios.astro";
import UltimoLLamado from "@/components/base-components/UltimoLLamado.astro";
import PreguntasFrecuentes from "@/components/pages/servicios/paginas/desarrolloWeb/PreguntasFrecuentes.astro";
import PlanesPrecios from "@/components/pages/servicios/paginas/desarrolloWeb/PlanesPrecios.astro";
import dataFaqs from "@/data/faqs_dw.json";
import Como from "@/components/pages/index/sections/Como.astro";
import dataComo from "@/data/alcancesPropuestas_dw.json";
import imgOG from "@/assets/img/hero/web2.avif";
import imgHero from "@/assets/img/hero/bg_hero_dw2.avif";
import HeroPaginaServicios from "@/components/pages/servicios/paginas/seccionesGrales/HeroPaginaServicios.astro";

const dataLinks = [
  {
    href: "/servicios/desarrollo_web/#alcances_propuestas",
    label: "Alcances",
  },
  {
    href: "/servicios/desarrollo_web/#planes_desarrollo_web",
    label: "Precios",
  },
  {
    href: "/servicios/desarrollo_web/#preguntas_frecuentes_desarrollo_web",
    label: "Preguntas",
  },
  {
    href: "/servicios",
    label: "Volver",
  },
];

const keywords = [
  // Servicios core
  "desarrollo web",
  "desarrollo web a medida",
  "diseño web profesional",
  "sitios web personalizados",

  // Técnicas y características
  "desarrollo web responsive",
  "diseño UX UI",
  "optimización SEO",
  "desarrollo web optimizado",
  "sitio web rápido",
  "web segura",
  "diseño web moderno",

  // Enfoque profesional
  "desarrollo web para profesionales",
  "sitios web empresas",
  "web corporativa",
  "desarrollo web consultores",
  "sitio web estudios profesionales",
  "web servicios profesionales",

  // Beneficios específicos
  "experiencia usuario web",
  "diseño web conversión",
  "sitio web escalable",
  "plataforma web funcional",
  "web con SEO integrado",

  // Procesos y soluciones
  "desarrollo web personalizado",
  "soluciones web empresas",
  "creación sitios web",
  "diseño web a medida",

  // Geolocalización
  "desarrollo web Argentina",
  "diseño web Buenos Aires",

  // Long-tail estratégicas
  "desarrollo web optimizado SEO",
  "sitio web responsive profesional",
  "diseño web experiencia usuario",
  "desarrollo web para negocios",
  "web a medida con hosting",
];
---

<LayoutServicios
  dataLinks={dataLinks}
  title="Desarrollo Web Profesional a Medida | Diseño UX/UI y SEO | Panambi"
  description="Desarrollamos sitios web a medida con diseño UX/UI profesional, optimización SEO y hosting incluido. Webs rápidas, seguras y responsive para tu negocio."
  keywords={keywords}
  serviceType="ProfessionalService"
  ogImage={imgOG.src}
>
  <HeroPaginaServicios
    idContainer="hero_servicios_desarrollo_web"
    titulo="Convertimos tu idea"
    subtitulo="en un magneto de oportunidades"
    textoLibreTitulo="Tu sitio web es mucho más que una tarjeta de presentación"
    textoLibreSubtitulo="Es el corazón de tu presencia digital. En un entorno cada vez más competitivo, contar con una web rápida, atractiva y optimizada marca la diferencia entre ser visto o pasar desapercibido."
    img={imgHero.src}
    origen="dw"
  />
  <UltimoLLamado
    idContainer="call_to_action_dw_1"
    hrefBoton="https://wa.me/5491131664971?text=Hola, quiero hacer una consultar sobre desarrollo web."
    textoBoton="¿Lo hacemos?"
    titulo="Tu negocio merece un sitio web"
    subtitulo="a medida, con propósito, rendimiento y diseño moderno"
    bgColor="transparent"
  />
  <Como
    idContainer="alcances_propuestas_desarrollo_web"
    title="que te ofrecemos para que"
    subtitle="tu web tenga el impacto que tu marca necesita"
    dataText={dataComo}
    textNegro={true}
    bgColor="bg-violeta2-400"
  />

  <PlanesPrecios idContainer="planes_desarrollo_web" />
  <UltimoLLamado
    idContainer="call_to_action_dw_2"
    hrefBoton="https://wa.me/5491131664971?text=Hola, quiero hacer una consultar sobre desarrollo web."
    textoBoton="Hagamoslo realidad"
    titulo="Ya viste nuestros planes"
    subtitulo="¿que estas esperando para tener tu sitio web?"
    bgColor="bg-violeta1-300"
    textNegro={true}
  />
  <PreguntasFrecuentes dataFaqs={dataFaqs} />
</LayoutServicios>
