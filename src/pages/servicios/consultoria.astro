---
import LayoutServicios from "@/layouts/LayoutServicios.astro";
import UltimoLLamado from "@/components/base-components/UltimoLLamado.astro";
import PreguntasFrecuentes from "@/components/pages/servicios/paginas/desarrolloWeb/PreguntasFrecuentes.astro";
import Como from "@/components/pages/index/sections/Como.astro";
import imgHero from "@/assets/img/hero/consultoria.avif";
import Dolor from "@/components/pages/servicios/paginas/seccionesGrales/Dolor.astro";
import Oferta from "@/components/pages/servicios/paginas/seccionesGrales/Oferta.astro";
import ParaQuien from "@/components/pages/servicios/paginas/consultoria/ParaQuien.astro";
import HeroPaginaServicios from "@/components/pages/servicios/paginas/seccionesGrales/HeroPaginaServicios.astro";

//datos para componentes
import dataSoluciones from "@/data/solucionesConsultoria.json";
import dataDolor from "@/data/dolorConsultoria.json";
import dataFaqs from "@/data/faqs_consultoria.json";
import dataPlan from "@/data/planConsultoria.json";
import dataComo from "@/data/alcancesPropuestas_consultoria.json";
import dataParaQuien from "@/data/paraQuien_consultoria.json";

const dataLinks = [
  {
    href: "/servicios/consultoria/#problemas_destinatario_soluciones_consultoria",
    label: "Solución",
  },
  {
    href: "/servicios/consultoria/#alcances_propuestas_consultoria",
    label: "Propuesta",
  },
  {
    href: "/servicios/consultoria/#oferta_consultoria",
    label: "Precio",
  },
  {
    href: "/servicios",
    label: "Volver",
  },
];

const keywords = [
  "desarrollo web personalizado",
  "sitios web a medida para profesionales",
  "desarrollo web responsive",
  "diseño UX/UI profesional",
  "plataforma web segura y optimizada",
  "sitio web para servicios profesionales",
  "soluciones web para empresas",
  "desarrollo web Argentina",
  "sitio web corporativo para profesionales",
  "web con optimización SEO integrada",
  "sitio web con alojamiento incluido",
  "desarrollo web y tecnología para marcas",
  "creación de web moderna y funcional",
  "servicio de desarrollo web para consultores",
  "sitios web hechos a medida para negocios",
];
---

<LayoutServicios
  dataLinks={dataLinks}
  title="Panambi - Consultoria Estratégica de Negocios"
  description="Estrategia, diseño y tecnología para profesionales que quieren destacar. En Panambí desarrollamos sitios web a medida que impulsan tu marca y acompañan tu crecimiento."
  keywords={keywords}
>
  <HeroPaginaServicios
    idContainer="hero_consultoria_estrategica"
    titulo="CONSULTORÍA ESTRATÉGICA DE MARKETING Y NEGOCIO"
    subtitulo="Llevá tu negocio de servicios al siguiente nivel"
    textoLibreTitulo="Digitalizá, optimizá y maximizá el rendimiento de tu negocio de servicios"
    textoLibreSubtitulo="Un programa de consultoría estratégica de 4 semanas diseñado para profesionales de servicios que quieren llevar su negocio al entorno digital, optimizar sus procesos de captación y maximizar su rentabilidad. Trabajamos juntos para transformar tu presencia digital, construir sistemas de marketing efectivos y crear un modelo de negocio escalable que genera oportunidades de forma predecible."
    img={imgHero.src}
  />
  <UltimoLLamado
    idContainer="call_to_consultoria"
    hrefBoton="/contacto"
    textoBoton="Quiero transformar mi negocio"
    titulo="¿Listo para transformar tu negocio?"
    subtitulo="4 semanas que cambian tu forma de captar clientes y crecer"
    bgColor="bg-verde2-300"
    textNegro={true}
  />
  <Dolor
    idContainer="problemas_destinatario_soluciones_consultoria"
    titulo="Cómo transformamos tu negocio en 4 semanas"
    subtitle="tres pilares que sostienen tu crecimiento digital"
    dataDolor={dataDolor}
    dataSoluciones={dataSoluciones}
    hrefBoton="/contacto"
    textoBoton="Reserva tu consultoría"
  />
  <Como
    idContainer="alcances_propuestas_consultoria"
    title="Qué recibís en las 4 semanas"
    subtitle="entregables concretos que podés implementar desde el día uno"
    dataText={dataComo}
    textNegro={true}
    bgColor="bg-violeta2-400"
  />

  <Oferta
    idContainer="oferta_consultoria"
    titulo="Un mes que lo cambia todo"
    subtitulo="de modelo tradicional a negocio digital predecible y rentable"
    dataText={dataPlan}
  />
  <ParaQuien
    idContainer="para_quien_consultoria"
    titulo="¿Este programa es para vos?"
    subtitulo="Si sos profesional de servicios y querés escalar, seguí leyendo"
    textoLibreSubtitulo="Esta consultoría está diseñada específicamente para profesionales y emprendedores de servicios que ya tienen experiencia y clientes, pero necesitan digitalizar y escalar su negocio: abogados que buscan captar clientes más allá de referencias presenciales, contadores que quieren diferenciarse y atraer mejores clientes, corredores inmobiliarios que necesitan presencia digital profesional, asesores de seguros que buscan generar oportunidades de forma predecible, y consultores, coaches o arquitectos que quieren transformar su modelo tradicional en un sistema escalable y rentable."
    marginTop="mt-0"
    dataText={dataParaQuien}
    textNegro={true}
  />

  <UltimoLLamado
    idContainer="call_to_action_consultoria_2"
    hrefBoton="/contacto"
    textoBoton="Hablemos"
    titulo="Tu negocio no puede esperar más"
    subtitulo="conversemos sobre tu proyecto"
    bgColor="bg-verde2-300"
    textNegro={true}
  />

  <PreguntasFrecuentes dataFaqs={dataFaqs} />
</LayoutServicios>
