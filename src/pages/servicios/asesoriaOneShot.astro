---
import LayoutServicios from "@/layouts/LayoutServicios.astro";
import UltimoLLamado from "@/components/base-components/UltimoLLamado.astro";
import dataComo from "@/data/alcancesPropuestas_asesoria.json";
import PreguntasFrecuentes from "@/components/pages/servicios/paginas/desarrolloWeb/PreguntasFrecuentes.astro";
import dataFaqs from "@/data/faqs_asesoria.json";
import dataPlan from "@/data/planAsesoria_1a1.json";

import Como from "@/components/pages/index/sections/Como.astro";
import imgHero from "@/assets/img/hero/asesoria.avif";
import Dolor from "@/components/pages/servicios/paginas/seccionesGrales/Dolor.astro";
import Oferta from "@/components/pages/servicios/paginas/seccionesGrales/Oferta.astro";
import HeroGralServicios from "@/components/pages/servicios/paginas/seccionesGrales/HeroGralServicios.astro";

const dataLinks = [
  {
    href: "/servicios/asesoriaOneShot/#problemas_destinatario_soluciones_asesoria",
    label: "Problemas",
  },
  {
    href: "/servicios/asesoriaOneShot/#alcances_propuestas_asesoria_1a1",
    label: "Propuestas",
  },
  {
    href: "/servicios/asesoriaOneShot/#oferta_asesoria_1a1",
    label: "Precio",
  },
  {
    href: "/servicios",
    label: "Volver",
  },
];

const keywords = [
  // Keywords primarias
  "asesoría digital",
  "consultoría digital one shot",
  "estrategia digital 60 minutos",
  "diagnóstico presencia digital",
  "plan de acción digital",

  // Keywords secundarias
  "auditoría digital",
  "optimización activos digitales",
  "estrategia redes sociales",
  "análisis sitio web",
  "consultoría marketing digital",
  "sesión estratégica digital",
  "roadmap digital 90 días",
  "asesoría marketing online",
  "plan marketing digital",
  "consultor transformación digital",

  // Keywords long-tail
  "cómo mejorar mi presencia digital",
  "asesoría digital para emprendedores",
  "análisis competencia digital",
  "estrategia digital para profesionales independientes",
  "consultoría digital una sesión",
  "plan acción marketing digital personalizado",
  "auditoría web y redes sociales",
  "estrategia digital desde cero",

  // Keywords locales
  "asesoría digital Argentina",
  "consultor digital Buenos Aires",
  "estrategia digital LATAM",

  // Keywords complementarias
  "transformación digital",
  "diagnóstico digital",
  "sesión estratégica",
  "plan 90 días",
  "consultoría express",
  "auditoría web",
  "optimización redes sociales",
  "estrategia marketing",
  "análisis digital",
  "asesoría one shot",
];
---

<LayoutServicios
  dataLinks={dataLinks}
  title="Asesoría Digital One Shot | Estrategia + Plan de Acción en 60 Min | Panambi"
  description="Asesoría Digital One Shot: sesión estratégica de 60 min + diagnóstico completo + plan de acción de 90 días. Desde u$s 100. Empezá a crecer hoy."
  serviceType="ProfessionalService"
  ogImage={imgHero.src}
  keywords={keywords}
>
  <HeroGralServicios
    idContainer="hero_asesoria_1a1"
    titulo="Asesoría One Shot"
    subtitulo=" Digitaliza tu negocio de servicios"
    img=`${imgHero.src}`
    textoTitulo="Transformación digital en 60 minutos"
    textoDescripcion=" Una sesión estratégica que analiza tu presencia digital, identifica tus puntos ciegos y te entrega un plan de acción concreto para empezar a crecer hoy mismo."
  />
  <UltimoLLamado
    idContainer="call_to_action_asesoria_1"
    hrefBoton="/contacto"
    textoBoton="Reserva tu asesoria"
    titulo="¿Qué estás esperando?"
    subtitulo="Una hora puede cambiar todo tu enfoque"
    bgColor="bg-verde2-300"
    textNegro={true}
  />
  <Dolor />
  <Como
    idContainer="alcances_propuestas_asesoria_1a1"
    title="Lo que llevás buscando hace meses"
    subtitle="respuestas claras, estrategia sólida y pasos concretos"
    dataText={dataComo}
    textNegro={true}
    bgColor="bg-violeta2-400"
  />

  <Oferta
    idContainer="oferta_asesoria_1a1"
    titulo="En solo 60 minutos"
    subtitle="Podes cambiarlo todo"
    dataText={dataPlan}
  />
  <UltimoLLamado
    idContainer="call_to_action_asesoria_2"
    hrefBoton="/contacto"
    textoBoton="Reserva tu asesoria"
    titulo="Empezá hoy a crecer con claridad"
    subtitulo="reservá tu sesión estratégica y transformá tu negocio"
    bgColor="bg-verde2-300"
    textNegro={true}
  />
  <PreguntasFrecuentes dataFaqs={dataFaqs} />
</LayoutServicios>
