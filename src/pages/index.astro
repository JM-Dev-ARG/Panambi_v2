---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  ogImage={ogImage}
  ogTitle={ogTitle}
  ogDescription={ogDescription}
  twitterTitle={twitterTitle}
  twitterDescription={twitterDescription}
  pageType="WebPage"
>
  <!-- Schemas adicionales para Home -->
  <Fragment slot="additional-head">
    <!-- Schema de Organización extendido -->
    <script type="application/ld+json" set:html={JSON.stringify(homeSchema)} />

    <!-- Schema de Website -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify(websiteSchema)}
    />

    <!-- Schema de Breadcrumbs -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify(breadcrumbSchema)}
    />
  </Fragment>

  <Hero />
  <Servicios />
  <Conocenos />
  <Como
    title="Como hacemos para"
    subtitle="LLevar tu negocio al siguiente nivel"
    textNegro={true}
    dataText={cardComoData}
    idContainer="como_lo_hacemos"
    bgColor="bg-verde2-300"
  />
  <NuestrosProyectos />
  <Equipo />
