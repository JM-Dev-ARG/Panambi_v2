---
import HeroConCard from "@/components/base-components/HeroConCard.astro";
import Layout from "@/layouts/Layout.astro";
import data from "@/data/card_hero_contacto.json";
import imgContacto from "@/assets/img/hero/img_contacto2.avif";
import Formulario from "@/components/pages/contacto/sections/Formulario.astro";
const keywords = [
  // Términos de contacto principales
  "contacto agencia digital",
  "contacto marketing digital",
  "contacto desarrollo web",
  "presupuesto desarrollo web",
  "presupuesto marketing digital",
  "consultoría digital",

  // Servicios específicos
  "solicitar asesoría digital",
  "presupuesto diseño web",
  "consultoría estrategia digital",
  "presupuesto branding",
  "cotización desarrollo web",

  // Localización (importante para contacto)
  "agencia digital Argentina",
  "marketing digital Buenos Aires",
  "desarrollo web Argentina",
  "agencia digital Chivilcoy",

  // Acciones específicas
  "pedir presupuesto web",
  "solicitar consultoría marketing",
  "contactar agencia digital",
  "contratar servicios digitales",

  // Long-tail estratégicas
  "cómo contactar agencia digital",
  "presupuesto sitio web Argentina",
  "consultoría marketing digital personalizada",
  "solicitar asesoría estrategia digital",
  "contacto desarrollo web profesional",
];
---

<Layout
  title="Contacto | Pedí tu Presupuesto de Marketing y Desarrollo Web | Panambi"
  description="Contactá a Panambi para consultoría digital, desarrollo web o marketing. Pedí tu presupuesto sin cargo. Chivilcoy, Buenos Aires, Argentina. ¡Hablemos!"
  keywords={keywords}
>
  <HeroConCard
    imgCard={imgContacto.src}
    titulo="Contactanos"
    subtitulo="Nos encanta saber de vos"
    dataText={data}
    bgColor="bg-violeta3-500"
  />
  <Formulario />
</Layout>
