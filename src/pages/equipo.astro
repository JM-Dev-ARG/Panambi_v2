  // Recruitment y carrera
  "trabajar en agencia digital Argentina",
  "sumar equipo marketing digital",
  "empleo diseño web Buenos Aires",
  "carrera agencia digital",
  "oportunidades equipo desarrollo web",

  // Cultura y valores
  "equipo creativo digital Argentina",
  "profesionales apasionados marketing",
  "equipo innovación digital",
  "cultura agencia digital",

  // Geolocalización
  "equipo agencia digital Buenos Aires",
  "profesionales marketing digital Argentina",
  "equipo desarrollo web CABA",
  "expertos digitales Chivilcoy Buenos Aires",

  // Complementarias
  "sobre nosotros agencia Panambi",
  "equipo full service digital",
  "profesionales servicios digitales integrales",
  "equipo transformación digital empresas",
];

// ✅ META TAGS PERSONALIZADOS PARA REDES SOCIALES
const ogTitle =
  "Equipo Panambi | Expertos en Marketing, Desarrollo y Diseño Digital";
const ogDescription =
  "Equipo multidisciplinario de especialistas digitales en Argentina: estrategia, desarrollo web, UX/UI, branding y audiovisual. Conocé a los profesionales que transforman negocios.";

const twitterTitle = "Equipo Panambi | Profesionales Digitales";
const twitterDescription =
  "Conocé al equipo: especialistas en marketing digital, desarrollo web, diseño UX/UI y branding. Apasionados por transformar negocios.";

// Imagen OG del equipo
const ogImage = imgContacto.src;

// ✅ SCHEMA ESPECÍFICO PARA EQUIPO (Organization + Team)
const equipoSchema = {
  "@type": "Organization",
  name: "Panambi - Equipo",
  description:
    "Equipo multidisciplinario de especialistas en marketing digital, desarrollo web, diseño UX/UI, branding y producción audiovisual dedicados a transformar negocios de profesionales y empresas en Argentina",
  url: "https://panambi.net/equipo",
  parentOrganization: {
    "@id": "https://panambi.net/#organization",
  },
  knowsAbout: [
    "Marketing Digital",
    "Desarrollo Web",
    "Diseño UX/UI",
    "Branding Corporativo",
    "Estrategia Digital",
    "Consultoría de Negocios",
    "SEO y Posicionamiento",
    "Producción Audiovisual",
    "Content Marketing",
    "Diseño Gráfico",
    "Community Management",
  ],
  memberOf: {
    "@type": "Organization",
    "@id": "https://panambi.net/#organization",
  },
