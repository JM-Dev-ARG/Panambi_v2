---
import Layout from "@/layouts/Layout.astro";
import data from "@/data/card_hero_equipo.json";
import imgContacto from "@/assets/img/hero/img_equipo_hero.avif";
import HeroConCard from "@/components/base-components/HeroConCard.astro";
import EquipoGrid from "@/components/pages/equipo/sections/EquipoGrid.astro";
import UltimoLLamado from "@/components/base-components/UltimoLLamado.astro";
const keywords = [
  // Sobre el equipo (core)
  "equipo marketing digital",
  "agencia digital",
  "equipo desarrollo web",
  "especialistas branding",
  "expertos diseño UX UI",

  // Servicios y expertise
  "branding profesional",
  "diseño UX UI",
  "desarrollo web",
  "desarrollo móvil",
  "estrategia digital",
  "marketing digital",
  "diseño identidad marca",

  // Características del equipo
  "equipo multidisciplinario digital",
  "expertos productos digitales",
  "soluciones digitales personalizadas",
  "servicios integrales marketing",

  // Propuesta de valor
  "experiencias digitales",
  "consultoría estratégica",
  "diseño comunicación digital",
  "estrategia marca",
  "comercio digital",

  // Roles específicos (para búsquedas de portafolio)
  "diseñador freelancer",
  "community manager",
  "editor video",
  "desarrollador web",

  // Long-tail estratégicas
  "equipo diseño desarrollo web",
  "agencia branding diseño web",
  "expertos estrategia digital Argentina",
  "soluciones digitales para marcas",
  "diseño experiencia usuario profesional",
];
---

<Layout
  title="Equipo Panambi | Expertos en Branding, UX/UI y Desarrollo Web"
  description="Equipo multidisciplinario experto en branding, diseño UX/UI y desarrollo web. Creamos experiencias digitales personalizadas que fusionan estética y propósito."
  keywords={keywords}
>
  <HeroConCard
    imgCard={imgContacto.src}
    titulo="quienes somos"
    subtitulo="Conoce Un poco más de nosotros"
    dataText={data}
    bgColor="bg-negro"
  />
  <EquipoGrid />
  <UltimoLLamado
    idContainer="unite_equipo"
    textoBoton="Envianos tu CV"
    titulo="somos panambi"
    subtitulo="unite al equipo"
    hrefBoton="mailto:administracion@panambi.net"
    bgColor="bg-transparent"
  />
</Layout>
